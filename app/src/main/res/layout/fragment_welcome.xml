<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlack">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/background_sign_up_page" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ATH Sample"
            android:textAppearance="@style/TextAppearance.MyTheme.Headline6"
            android:textSize="36sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="16dp"
            android:gravity="center_horizontal"
            android:text="Welcome to the ATH Sample \n Let's Start!"
            android:textAppearance="@style/TextAppearance.MyTheme.Headline5"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/signInWelcomeButton"
            style="@style/Widget.MaterialComponent.Button.Noties"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginStart="66dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="66dp"
            android:fontFamily="@font/gilroy_semibold"
            android:text="@string/singInWelcome"
            android:textSize="18sp"
            app:cornerRadius="17sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/signUpWelcomeButton"
            style="@style/Widget.MaterialComponent.OutlinedButton.Noties"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginStart="66dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="66dp"
            android:fontFamily="@font/gilroy_semibold"
            android:text="@string/singUpWelcome"
            android:textSize="18sp"
            app:cornerRadius="17dp" />
    </LinearLayout>

</FrameLayout>